<div id="new-ad-form">
    <div class="form-line">
        <label for="title">Title</label>
        <input type="text" class="form-line" id="title" placeholder="Ex: Best car! (optional)">
    </div>

    <div class="form-line">
        <label for="make">Make</label>
        <!-- <input type="text" class="form-line" id="make" placeholder="Ex: BWM"> -->

        <select name="make" id="make">
        {{#each this}}
            {{#manufacturers}}
                <option value="{{name}}">{{name}}</option>
            {{/manufacturers}}
        {{/each}}
        </select>
    </div>


    <div class="form-line">
        <label for="model">Model</label>
        <input type="text" class="form-line" id="model" placeholder="Ex: M5">
    </div>

    <div class="form-line">
        <label for="price">Price</label>
        <input type="text" class="form-line" id="price" placeholder="Ex: 20000">
    </div>

    <div class="form-line">
        <label for="fuel">Fuel type</label>
        <!--<input type="text" class="form-line" id="fuel" placeholder="Ex: Diesel">-->
        <select name="fuel type">
            <option value="Diesel">Diesel
            <option value="Petrol">Petrol
            <option value="Hybrid">Hybrid
            <option value="Other">Other
        </select>
    </div>

    <div class="form-line">
        <label for="power">Power</label>
        <input type="text" class="form-line" id="power" placeholder="Ex: 250">
    </div>

    <div class="form-line">
        <label for="mileage">Mileage</label>
        <input type="text" class="form-line" id="mileage" placeholder="Ex: 1000">
    </div>

    <div class="form-line">
        <label for="gearbox">Gearbox</label>
        <!--<input type="text" class="form-line" id="gearbox" placeholder="Ex: Automatic">-->

        <select name="gearbox">
            <option value="Manual">Manual
            <option value="Automatic">Automatic
            <option value="Semi-automatic">Semi-automatic
        </select>
    </div>

    <div class="form-line">
        <label for="manufactureDate">Manufacture date</label>
        <!--<input type="text" class="form-line" id="manufactureDate" placeholder="Ex: 05/2016">-->
        <select id="month">
        {{#each this}}
            {{#months}}
                <option value="{{@index}}">{{this}}</option>
            {{/months}}
        {{/each}}
      
        </select>

        <select id="year">
        {{#each this}}
            {{#years}}
                <option value="{{this}}">{{this}}</option>
            {{/years}}
        {{/each}}
        </select>
    </div>

    <div class="form-line">
        <label for="image">Image url</label>
        <input type="text" class="form-line" id="image">
    </div>

    <input type="submit" id="submitAdInfo-btn" value="Add">
</div>